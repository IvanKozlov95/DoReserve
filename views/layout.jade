doctype html
head
	meta(charset='utf-8')
	script(src='/js/jquery-2.2.2.min.js')
	script(src="/bootstrap/bootstrap.js")
	script(src='/js/notify.js')
	link(href='/bootstrap/bootstrap.css' rel='stylesheet')
	link(href='/css/main.css' rel='stylesheet')
	link(href='/css/footer.css' rel='stylesheet')
	block head
body
	//- navbar
	nav(class='navbar navbar-default')
		div.container
			div.navbar-header
				button(class='navbar-toggle collapsed' data-toggle='collapse' data-target="#navbar"
				 aria-expanded="false" aria-controls="navbar")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a(href='/').navbar-brand DoReserve
			div(id='navbar' class='navbar-collapse collapse')
				ul(class='nav navbar-nav')
					li
						a(href='/user/home') Profile
					li
						a(href='/company/all') Companies
					li
						a(href='/about') About
				//- login 
				if !user
					form(class='navbar-form navbar-right' action='/login' method='post')
						input(type='text' name='username' placeholder='Your Name').form-control
						input(type='password' name='password' placeholder='Your Password').form-control
						button(type='Login' class='btn btn-primary btn-sm') Sign In
						button(type='button' class='btn btn-primary btn-sm' onclick="window.location.href='/register'") Sign Up
				else
					div.navbar-right
						p.navbar-text
							= 'Hello, ' + user.name + '! '
							a(href='/logout') logout
				//- login end
	//- navbar end
	div.container
		block content
	footer.footer
		.container
			br
			p.text-muted Ivan Kozlov --- 2016 (c)

block bottom