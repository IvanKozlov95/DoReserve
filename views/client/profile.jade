extends ../layout

block head

block content
	.profile
		each value, field in client
			if (field == 'id' || field == 'name' || field == 'logo') 
						- continue;
			p.text-primary.text-capitalize= field
			p.big= value
		#reservations.container
			.row
				.col-md-1
					p #
				.col-md-2
					p Company
				.col-md-3
					p Date
				.col-md-2
					p Status
				.col-md-3
					p Time
		div(class='avatar')
				img(src='\\logos\\'+client.logo alt='avatar' width='150' height='200').img-circle